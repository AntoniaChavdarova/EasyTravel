@using EasyTravel.Common
@model EasyTravel.Web.ViewModels.Bookings.BookingInputModel
@{
    this.ViewData["Title"] = "Property";
   
}
<link href="~/css/bookForm.css" rel="stylesheet" />

<div id="booking" class="section">
    <div class="section-center">
        <div class="container-fluid">
            <div class="row">
                <div class="booking-form">
                    <div class="form-header">
                        <h1>Make your booking</h1>
                    </div>
                  
                    <form method="post"> 
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group text-white">
                            <label asp-for="@this.Model.PropertyName"></label>
                            <input asp-for="@this.Model.PropertyName" class="form-control" />
                            <span asp-validation-for="@this.Model.PropertyName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group text-white">
                                    <label asp-for="@this.Model.CheckIn"></label>
                                    <input asp-for="@this.Model.CheckIn" class="form-control" type="date" required>
                                    <span asp-validation-for="@this.Model.CheckIn" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group text-white">
                                    <label asp-for="@this.Model.CheckOut"></label>
                                    <input asp-for="@this.Model.CheckOut" class="form-control" type="date" required>
                                    <span asp-validation-for="@this.Model.CheckOut" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group text-white">
                                <label asp-for="@this.Model.PeopleCount"></label>
                                <input asp-for="@this.Model.PeopleCount" class="form-control" required>
                               
                            </div>
                            </div>
                     
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group text-white">
                                        <input asp-for="@this.Model.UserEmail" class="form-control" type="email" placeholder="Enter your Email"> <span class="form-label">Email</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group text-white">
                                        <input class="form-control" type="tel" placeholder="Enter you Phone">
                                        <span class="form-label">Phone</span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-btn"> <button class="submit-btn bg-primary">Book Now</button> </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>