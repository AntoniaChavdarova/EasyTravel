@model EasyTravel.Web.ViewModels.Reviews.CreateReviewInputModel
@{
    this.ViewData["Title"] = "Create Review";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Review for ...</h5>
        <h4 class="card-title">@this.Model.Name</h4>
        <p class="card-text">@this.Model.CityName ,@this.Model.Address </p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
    <img class="card-img-bottom" src="@this.Model.MainImageUrl" alt="Card image cap">
</div>
<hr />
<br />
<div class="card" style="width: 70rem; height:20rem;">

    <div class="row">
        <div class="col-2"> <img src="" width="70" class="rounded-circle mt-2"> </div>
        <div class="col-10">
            <div class="comment-box ml-2">
                <h4>Add a review</h4>
                <form method="post">
                    <div class="comment-area"> <textarea asp-for="@this.Model.Content" class="form-control" placeholder="what is your view?" rows="10"></textarea> </div>
                    <div class="comment-btns mt-2">
                        <div class="row">
                            <div class="col-6">
                                <a class="btn btn-success" asp-area="" asp-controller="Bookings" asp-action="AllBookings">No! Go Back</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-success send btn">Send <i class="fa fa-long-arrow-right ml-1"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>