    <script type="text/javascript">
        var myMap = null;

        function LoadMap() {
            myMap = new VEMap("mapDiv");
            myMap.LoadMap();

            StartGeocoding("1 Microsoft Way, Redmond WA");
        }

        function UnloadMap() {
            if (myMap != null) {
                myMap.Dispose();
            }
        }
    </script>
</head>
<body onload="LoadMap()" onunload="UnloadMap()">
    <div style="position:relative;width:640px;height:480px;" id="mapDiv" />
</body>
